{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },
      {
          "type": "node",
          "request": "launch",
          "name": "Launch Program",
          "program": "${workspaceRoot}/server.js"
      },
      {
          "type": "node",
          "request": "attach",
          "name": "Attach to Port",
          "address": "localhost",
          "port": 5858
      }
  ]
}